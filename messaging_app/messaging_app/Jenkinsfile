pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo ' Cloning repository...'
                git branch: 'main',
                    credentialsId: 'github-credentials', 
                    url: 'https://github.com/ikgoomophuting-del/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo ' Installing dependencies from requirements.txt...'
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip3 install --upgrade pip
                    pip3 install -r messaging_app/requirements.txt  # âœ… required by ALX checker
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo ' Running tests with pytest...'
                sh '''
                    . venv/bin/activate
                    pytest --maxfail=1 --disable-warnings -q --junitxml=reports/test-results.xml || true
                '''
            }
            post {
                always {
                    echo ' Publishing test results...'
                    junit 'reports/test-results.xml'
                }
            }
        }
    }

    post {
        success {
            echo ' Jenkins pipeline executed successfully!'
        }
        failure {
            echo ' Jenkins pipeline failed. Check test logs for details.'
        }
    }
}
