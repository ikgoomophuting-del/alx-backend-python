#!/usr/bin/env bash
# kurbeScript
# Script to set up and verify a local Kubernetes cluster using Minikube

# Exit immediately if any command fails
set -e

echo "ğŸš€ Starting Kubernetes setup using Minikube..."

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube not found. Please install Minikube first."
    echo "ğŸ‘‰ Visit: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Start Minikube cluster
echo "ğŸŒ± Starting Minikube cluster..."
minikube start

# Verify that the cluster is running
echo "ğŸ” Checking cluster status..."
kubectl cluster-info

# Retrieve and display available pods
echo "ğŸ“¦ Listing pods in all namespaces..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster is up and running!"
