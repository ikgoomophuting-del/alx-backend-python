#!/usr/bin/env bash
# kurbeScript
# Script to set up and verify a local Kubernetes cluster using Minikube

# Exit immediately if any command fails
set -e

echo "🚀 Starting Kubernetes setup using Minikube..."

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "❌ Minikube not found. Please install Minikube first."
    echo "👉 Visit: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Start Minikube cluster
echo "🌱 Starting Minikube cluster..."
minikube start

# Verify that the cluster is running
echo "🔍 Checking cluster status..."
kubectl cluster-info

# Retrieve and display available pods
echo "📦 Listing pods in all namespaces..."
kubectl get pods --all-namespaces

echo "✅ Kubernetes cluster is up and running!"
